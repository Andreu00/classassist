<Window x:Class="MiTFG.ListarAlumnosW"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiTFG"
        mc:Ignorable="d"
        Title="ListarAlumnosW" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" CanUserAddRows="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
            <!-- Define las columnas basadas en tus datos aquí -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Columna 1" Binding="{Binding Path=Propiedad1}"/>
                <DataGridTextColumn Header="Columna 2" Binding="{Binding Path=Propiedad2}"/>
                <!-- Más columnas según sean necesarias -->

                <!-- Columna de botones de eliminar -->
                <DataGridTemplateColumn Header="Acciones" Width="SizeToCells">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Eliminar" Click="DeleteButton_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

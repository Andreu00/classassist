<Window x:Class="MiTFG.CRUDS.Tareas.AsignarAlumnos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Asignar Alumnos" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Asignar Alumnos" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>
            <Button x:Name="btnSeleccionarTodos" Content="Seleccionar Todos" Width="150" Margin="0,0,0,10" Click="btnSeleccionarTodos_Click"/>
            <ListBox x:Name="lbAlumnos" SelectionMode="Multiple">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" />
                            <TextBlock Text="{Binding Nombre}" Margin="10,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button x:Name="btnAsignar" Content="Asignar" Width="100" Margin="10" HorizontalAlignment="Center" Click="btnAsignar_Click"/>
        </StackPanel>
    </Grid>
</Window>
